    private void DeleteEdge(KeyboardEventArgs event_args)
    {
        if(event_args.Key == "Delete")
        {
            Data.Dispose();
        }
    }
    #endregion

    #region NestedTypes
    public sealed partial class SData(double x, double y) : IDisposable
    {
        #region Instance
