@code
{
    [Parameter] public required SData Data { get; set; }
    [Parameter] public EventCallback<LoopEdge.SData> OnDelete { get; set; }
}

<path class="LoopEdge" tabindex="0" fill="none" data-path=@Data.IsPathPart
    d=@($"M {Data.X} {Data.Y} Q {Data.X - 40} {Data.Y - 40} {Data.X} {Data.Y - 40} Q {Data.X + 40} {Data.Y - 40} {Data.X} {Data.Y} Z")
      @onkeydown=@RaiseOnDelete @onkeydown:stopPropagation @onkeydown:preventDefault />

@code
{
    private void RaiseOnDelete(KeyboardEventArgs event_args)
    {
        if(event_args.Key is "Delete")
        {
            OnDelete.InvokeAsync(Data);
        }
    }

    public sealed partial class SData(double x, double y)
    {
        public double X { get; set; } = x;
        public double Y { get; set; } = y;
        public bool IsPathPart { get; set; }
    }
}